{
	"compilerOptions": {
		"module": "ESNext",
		"target": "ESNext",
		"moduleResolution": "Node",
		"esModuleInterop": true,
		"sourceMap": false,
		"declaration": true,
		"removeComments": false,
		"skipLibCheck": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"alwaysStrict": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"lib": [
			"dom",
			"esnext"
		]
	},
	"ts-node": {
		"esm": true,
		"experimentalSpecifierResolution": "node"
	},
	"lib": [
		"esnext"
	],
	"exclude": [
		"node_modules",
		"src"
	],
	"include": [
		"**/*.ts"
	]
}
